extends ../../layout/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3

    include ../../partials/list-btn-users.pug

    .row
      .col-12
        +box-head("Danh sách bạn bè")
    .row(data-user-friends = user.id)
      each user in users
        .col-4(user_id= user.id)
          div(class="box-user")
            div(class="inner-avatar")
              img(
                src= user.avatar ? user.avatar : "/images/logoUser.png"
                alt=user.fullName
              )
            div(class="inner-info")
              div(class="inner-name") #{user.fullName}
              div(class="inner-buttons")
                a(
                  href=`/chat/${user.infoFriend.roomChatId}`
                  class="btn btn-sm btn-primary mr-1"
                  btn-message-friend
                ) Nhắn tin
            div(
              class="inner-status"
              status = user.statusOnline
            ) <i class ="fa-solid fa-circle"></i>
block js 
  script(src="/js/users.js") 
  